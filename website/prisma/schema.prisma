generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String           @id @default(uuid())
  slug             String           @unique
  name             String
  description      String
  longDescription  String?
  url              String
  techStack        String[]
  category         Category
  featured         Boolean          @default(false)
  mrr              Decimal          @default(0) @db.Decimal(10, 2)
  users            Int              @default(0)
  status           ProjectStatus    @default(LIVE)
  problemStatement String?
  solutionApproach String?
  lessonsLearned   String?
  screenshots      String[]
  launchedAt       DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  githubToken      String?
  githubUrl        String?
  lastSynced       DateTime?
  trackProgress    Boolean          @default(false)
  customMetrics    Json?
  projectType      ProjectType      @default(SAAS)
  currentPhase     ProjectPhase?
  techStackDetails String?
  timelineEvents   Json?
  metricsHistory   MetricsHistory[]
  posts            Post[]

  @@index([category])
  @@index([featured])
  @@index([trackProgress])
  @@index([currentPhase])
}

model Post {
  id            String         @id @default(uuid())
  slug          String         @unique
  title         String
  excerpt       String
  tags          String[]
  readTime      Int
  publishedAt   DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  content       String?
  postType      String         @default("manual")
  projectId     String?
  published     Boolean        @default(false)
  contentPillar ContentPillar?
  phase         ProjectPhase?
  postTypeEnum  PostTypeEnum?
  targetPersona TargetPersona?
  project       Project?       @relation(fields: [projectId], references: [id])

  @@index([publishedAt])
  @@index([postType])
  @@index([projectId])
  @@index([contentPillar])
  @@index([targetPersona])
  @@index([phase])
}

model MetricsHistory {
  id         String   @id @default(uuid())
  projectId  String
  mrr        Decimal  @db.Decimal(10, 2)
  users      Int
  recordedAt DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, recordedAt])
}

enum Category {
  AI_TOOLS
  FRAMEWORKS
  EDUCATION
  MARKETPLACE
  OTHER
  PRODUCTIVITY
  FINANCE
  WELLBEING
}

enum ProjectStatus {
  ACTIVE
  BETA
  PLANNING
  ARCHIVED
  RESEARCH
  DESIGN
  BUILD
  MVP
  LIVE
}

enum ProjectType {
  SAAS
  TRADING
  OPEN_SOURCE
  CONTENT
  PERSONAL
  MARKETPLACE
}

enum ContentPillar {
  JOURNEY
  FRAMEWORK
  TOOL
  COMMUNITY
}

enum PostTypeEnum {
  PROGRESS_UPDATE
  MILESTONE
  FAILURE
  TUTORIAL
  CASE_STUDY
  GENERAL
}

enum TargetPersona {
  CORPORATE_ESCAPIST
  SERVICE_PROVIDER
  BUILDER
  ALL
}

enum ProjectPhase {
  IDEATION
  MVP
  LAUNCH
  GROWTH
  MAINTENANCE
  ARCHIVED
  PAUSED
}

model AdminSettings {
  id           String   @id @default("admin")
  passwordHash String
  updatedAt    DateTime @updatedAt
}
