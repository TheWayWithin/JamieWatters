generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               String           @id @default(uuid())
  slug             String           @unique
  name             String
  description      String
  longDescription  String?
  url              String
  techStack        String[]
  category         Category
  featured         Boolean          @default(false)
  mrr              Decimal          @default(0) @db.Decimal(10, 2)
  users            Int              @default(0)
  status           ProjectStatus    @default(LIVE)
  projectType      ProjectType      @default(SAAS)
  customMetrics    Json?
  problemStatement String?
  solutionApproach String?
  lessonsLearned   String?
  screenshots      String[]
  launchedAt       DateTime?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  githubToken      String?
  githubUrl        String?
  lastSynced       DateTime?
  trackProgress    Boolean          @default(false)
  metricsHistory   MetricsHistory[]
  posts            Post[]

  // Enhanced project metadata (Sprint 1)
  currentPhase     ProjectPhase? // Current project phase
  techStackDetails String? // Detailed tech stack markdown
  timelineEvents   Json? // Array of {date, event, description, linkedPostId?}

  @@index([category])
  @@index([featured])
  @@index([trackProgress])
  @@index([currentPhase])
}

model Post {
  id          String    @id @default(uuid())
  slug        String    @unique
  title       String
  excerpt     String
  tags        String[]
  readTime    Int
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  content     String?
  postType    String    @default("manual")
  projectId   String?
  published   Boolean   @default(false)
  project     Project?  @relation(fields: [projectId], references: [id])

  // Content categorization (optional for backwards compatibility)
  contentPillar ContentPillar? // Which content pillar this belongs to
  postTypeEnum  PostTypeEnum? // Structured post type (separate from legacy postType string)
  targetPersona TargetPersona? // Who this post is for
  phase         ProjectPhase? // What project phase this relates to

  @@index([publishedAt])
  @@index([postType])
  @@index([projectId])
  @@index([contentPillar])
  @@index([targetPersona])
  @@index([phase])
}

model MetricsHistory {
  id         String   @id @default(uuid())
  projectId  String
  mrr        Decimal  @db.Decimal(10, 2)
  users      Int
  recordedAt DateTime @default(now())
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId, recordedAt])
}

enum Category {
  AI_TOOLS
  FRAMEWORKS
  EDUCATION
  MARKETPLACE
  PRODUCTIVITY
  FINANCE
  WELLBEING
  OTHER
}

enum ProjectStatus {
  RESEARCH
  DESIGN
  PLANNING
  BUILD
  BETA
  MVP
  LIVE
  ARCHIVED
  ACTIVE // Legacy value - kept for database compatibility, use LIVE instead
}

enum ProjectType {
  SAAS
  TRADING
  OPEN_SOURCE
  CONTENT
  PERSONAL
  MARKETPLACE
}

// Content categorization enums for Sprint 1
enum ContentPillar {
  JOURNEY // Build-in-public progress posts
  FRAMEWORK // Reusable frameworks and methodologies
  TOOL // Tools, templates, resources
  COMMUNITY // Community content, contributions
}

enum PostTypeEnum {
  PROGRESS_UPDATE // Regular progress updates
  MILESTONE // Major achievements
  FAILURE // Failures and lessons (important for authenticity)
  TUTORIAL // How-to content
  CASE_STUDY // Deep dive case studies
  GENERAL // General content
}

enum TargetPersona {
  CORPORATE_ESCAPIST // People leaving corporate jobs
  SERVICE_PROVIDER // Freelancers, consultants
  BUILDER // Technical builders, developers
  ALL // Content for everyone
}

enum ProjectPhase {
  IDEATION
  MVP
  LAUNCH
  GROWTH
  MAINTENANCE
  ARCHIVED
  PAUSED
}
